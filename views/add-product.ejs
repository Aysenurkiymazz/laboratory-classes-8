<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= headTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <main>
      <%- include('partials/navigation', {
        menuLinks: menuLinks,
        activeLinkPath: activeLinkPath,
        cartCount: cartCount
      }); %>

      <h1 class="heading">Add Product</h1>

      <form class="form" action="/products/add" method="POST">
        <div class="form__group">
          <label class="form__label" for="name">Name</label>
          <input
            id="name"
            class="form__input"
            type="text"
            name="name"
            required
            placeholder="Enter product name"
          />
        </div>

        <div class="form__group">
          <label class="form__label" for="description">Description</label>
          <input
            id="description"
            class="form__input"
            type="text"
            name="description"
            required
            placeholder="Enter product description"
          />
        </div>

        <div class="form__group">
          <label class="form__label" for="price">Price</label>
          <input
            id="price"
            class="form__input"
            type="number"
            name="price"
            step="0.01"
            min="0"
            required
            placeholder="Enter price in $"
          />
        </div>

        <button class="button" type="submit">Add Product</button>
      </form>
    </main>
  </body>
</html>
